<div class="w-full bg-white border-2 border-slate-200 p-6 text-sm text-center">
  <%- if controller_name != 'sessions' %>
    <p class="mb-2"><%= link_to "Entrar", new_session_path(resource_name), class: 'link' %></p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mb-2"><%= link_to "Cadastre-se", new_registration_path(resource_name), class: 'link' %></p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p class="mb-2"><%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: 'link' %></p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="mb-2"><%= link_to "Instruções de Confirmação", new_confirmation_path(resource_name), class: 'link' %></p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p class="mb-2"><%= link_to "Instruções de Desbloqueio", new_unlock_path(resource_name), class: 'link' %></p>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <p class="mb-2"><%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: 'link' %></p>
    <% end %>
  <% end %>
</div>
